<Alloy>
	<Window id="home" class="window" onSwipe="swipe" layout="null">
		<ActivityIndicator id="activityIndicator" bottom="45"></ActivityIndicator>
		<ImageView id="logo"></ImageView>
		<View id="container">
			<Button id="arrowLeft" onClick="left"></Button>
			<View id="viewContainer">
				<View id="fallos" class="view" onClick="openW" visible="true">
					<ImageView id="programaImage" class="viewImage" image="/images/ico_2.png"></ImageView>
					<Label class="viewTitle">Reporte Fallas</Label>
				</View>
				<View id="quejas" class="view" onClick="openW">
					<ImageView id="programaImage" class="viewImage" image="/images/ico_1.png"></ImageView>
					<Label class="viewTitle">Reporte Quejas</Label>
				</View>
				<View id="historial" class="view" onClick="openW">
					<ImageView id="programaImage" class="viewImage" image="/images/ico_3.png"></ImageView>
					<Label class="viewTitle">Mis Reportes</Label>
				</View>
				<View id="herramientas" class="view" onClick="openW">
					<ImageView id="programaImage" class="viewImage" image="/images/ico_4.png"></ImageView>
					<Label class="viewTitle">Herramientas</Label>
				</View>
			</View>
			<Button id="arrowRight" onClick="right"></Button>
		</View>
		<View id="buttons" onClick="setView">
			<ImageView class="buttons" index="0"  left="0" opacity="1"  image="/images/btn_2.png"></ImageView>
			<ImageView class="buttons" index="1" image="/images/btn_1.png"></ImageView>
			<ImageView class="buttons" index="2" image="/images/btn_3.png"></ImageView>
			<ImageView class="buttons" index="3" image="/images/btn_4.png"></ImageView>
		</View>
		<View id="padding"></View>
	</Window>
</Alloy>